{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "React Library",
  "extends": "./base.json",
  "compilerOptions": {
    "jsx": "react-jsx",
    "outDir": "dist", 
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": false,
    "noEmit": false 
  },
  "include": ["src"],
  "exclude": ["**/*.test.ts", "node_modules", "dist"]
}
